{
    "swagger": "2.0",
    "info": {
        "version": "0.0.1",
        "title": "Udadisi"
    },
    "host": "localhost:8080",
    "basePath": "/v1",
    "paths": {
        "/locations": {
            "get": {
                "description": "Gets 'Location' objects.\n",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "ArrayOfLocations",
                            "type": "array",
                            "items": {
                                "title": "Location",
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "geo_coord": {
                                        "type": "object",
                                        "properties": {
                                            "latitude": {
                                                "type": "number",
                                                "format": "float",
                                                "description": "Latitude of the location"
                                            },
                                            "longitude": {
                                                "type": "number",
                                                "format": "float",
                                                "description": "Longitude of the location"
                                            },
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/locations/{location}/stats": {
            "get": {
                "description": "Gets `Stats` object.\n",
                "parameters": [
                    {
                        "name": "location",
                        "in": "path",
                        "description": "name of location that the stats should be from",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "source",
                        "in": "query",
                        "description": "source type that the stats should be from",
                        "required": false,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "from",
                        "in": "query",
                        "description": "start date and time stats are from, defaults to -24hrs before now",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "to",
                        "in": "query",
                        "description": "end date and time stats are from, defaults to now",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "Stats",
                            "type": "object",
                            "properties": {
                                "trendscount": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/locations/{location}/trends": {
            "get": {
                "description": "Gets `WordCount` objects.\nOptional query param of **limit** determins top number of word counts returned\n",
                "parameters": [
                    {
                        "name": "location",
                        "in": "path",
                        "description": "name of location that the results should be from",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "top number of word counts to return, defaults to 10",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "source",
                        "in": "query",
                        "description": "source type that the stats should be from",
                        "required": false,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "from",
                        "in": "query",
                        "description": "start date and time posts are from, defaults to -24hrs before now",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "to",
                        "in": "query",
                        "description": "end date and time posts are from, defaults to now",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "interval",
                        "in": "query",
                        "description": "number of periods to divide time range by, defaults to 2",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "ArrayOfWordCounts",
                            "type": "array",
                            "items": {
                                "title": "WordCount",
                                "type": "object",
                                "properties": {
                                    "term": {
                                        "type": "string"
                                    },
                                    "occurances": {
                                        "type": "integer"
                                    },
                                    "velocity": {
                                        "type": "number",
                                        "format": "float",
                                        "description": "Value calculated on number of occurances divided by time period"
                                    },
                                    "series": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer",
                                            "description": "Occurrences for each interval"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/locations/{location}/trends/{term}": {
            "get": {
                "description": "Gets `TermPackage` object.\nOptional query param of **velocity** determines\nminimum velocity of trends returned\n",
                "parameters": [
                    {
                        "name": "term",
                        "in": "path",
                        "description": "term to be included in the results",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "location",
                        "in": "path",
                        "description": "name of location that the results should be from",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "velocity",
                        "in": "query",
                        "description": "minimum velocity of trends",
                        "required": false,
                        "type": "number",
                        "format": "float"
                    },
                    {
                        "name": "source",
                        "in": "query",
                        "description": "source type that the stats should be from",
                        "required": false,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "from",
                        "in": "query",
                        "description": "start date and time posts are from in format YYYYMMDDhhmm, defaults to -24hrs before now",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "to",
                        "in": "query",
                        "description": "end date and time posts are from, defaults to now",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "interval",
                        "in": "query",
                        "description": "number of periods to divide time range by, defaults to 2",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "TermPackage",
                            "type": "object",
                            "properties": {
                                "term": {
                                    "type": "string"
                                },
                                "velocity": {
                                    "type": "number",
                                    "format": "float",
                                    "description": "Value calculated on number of occurances divided by time period"
                                },
                                "series": {
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    }
                                },
                                "source_types": {
                                    "type": "array",
                                    "items": {
                                        "title": "SourceType",
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "description": "The type of source, e.g. Twitter, Blog, Journal"
                                                },
                                            "series": {
                                                "type": "array",
                                                "items": {
                                                    "type": "number"
                                                    }
                                            }
                                        }

                                    }
                                },
                                "related" : {
                                    "type": "array",
                                    "description": "All the terms that appear in the same sources as the requested term",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                 "sources": {
                                        "type": "array",
                                        "items": {
                                            "title": "Source",
                                            "type": "object",
                                            "properties": {
                                                "source": {
                                                    "type": "string",
                                                    "description": "The type of source, e.g. Twitter, Blog, Journal"
                                                },
                                                "source_uri": {
                                                    "type": "string",
                                                    "description": "URI of the source, e.g. Tweet URL"
                                                }
                                            }
                                        }
                                    }
                            }
                        }
                    }
                }
            }
        }
    }
}