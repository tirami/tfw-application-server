{
    "swagger": "2.0",
    "info": {
        "version": "0.0.1",
        "title": "Udadisi"
    },
    "host": "localhost:8080",
    "basePath": "/v1",
    "paths": {
        "/locations": {
            "get": {
                "description": "Gets 'Location' objects.\n",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "ArrayOfLocations",
                            "type": "array",
                            "items": {
                                "title": "Location",
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/locations/{location}/stats": {
            "get": {
                "description": "Gets `Stats` object.\n",
                "parameters": [
                    {
                        "name": "location",
                        "in": "path",
                        "description": "name of location that the states should be from",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "Stats",
                            "type": "object",
                            "properties": {
                                "trendscount": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/locations/{location}/trends": {
            "get": {
                "description": "Gets `WordCount` objects.\nOptional query param of **limit** determins top number of word counts returned\n",
                "parameters": [
                    {
                        "name": "location",
                        "in": "path",
                        "description": "name of location that the results should be from",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "top number of word counts to return, defaults to 10",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "from",
                        "in": "query",
                        "description": "start date and time posts are from, defaults to -24hrs before now",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "to",
                        "in": "query",
                        "description": "end date and time posts are from, defaults to now",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "interval",
                        "in": "query",
                        "description": "number of periods to divide time range by, defaults to 2",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "ArrayOfWordCounts",
                            "type": "array",
                            "items": {
                                "title": "WordCount",
                                "type": "object",
                                "properties": {
                                    "term": {
                                        "type": "string"
                                    },
                                    "occurances": {
                                        "type": "integer"
                                    },
                                    "velocity": {
                                        "type": "number",
                                        "format": "float",
                                        "description": "Value calculated on number of occurances divided by time period"
                                    },
                                    "series": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer",
                                            "description": "Occurrences for each interval"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/locations/{location}/trends/{term}": {
            "get": {
                "description": "Gets `Trend` objects.\nOptional query param of **velocity** determines\nminimum velocity of trends returned\n",
                "parameters": [
                    {
                        "name": "term",
                        "in": "path",
                        "description": "term to be included in the results",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "location",
                        "in": "path",
                        "description": "name of location that the results should be from",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "velocity",
                        "in": "query",
                        "description": "minimum velocity of trends",
                        "required": false,
                        "type": "number",
                        "format": "float"
                    },
                    {
                        "name": "from",
                        "in": "query",
                        "description": "date and time posts are from",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "interval",
                        "in": "query",
                        "description": "time interval to include post from from date",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "ArrayOfTrends",
                            "type": "array",
                            "items": {
                                "title": "Trend",
                                "type": "object",
                                "properties": {
                                    "term": {
                                        "type": "string"
                                    },
                                    "word_counts": {
                                        "type": "array",
                                        "items": {
                                            "title": "WordCount",
                                            "type": "object",
                                            "properties": {
                                                "occurances": {
                                                    "type": "integer"
                                                },
                                                "term": {
                                                    "type": "string",
                                                    "description": "Term that the count is for"
                                                },
                                                "velocity": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "description": "Value calculated on number of occurances divided by time period"
                                                }
                                            }
                                        }
                                    },
                                    "sources": {
                                        "type": "array",
                                        "items": {
                                            "title": "Source",
                                            "type": "object",
                                            "properties": {
                                                "source": {
                                                    "type": "string",
                                                    "description": "The type of source, e.g. Twitter, Blog, Journal"
                                                },
                                                "source_uri": {
                                                    "type": "string",
                                                    "description": "URI of the source, e.g. Tweet URL"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}